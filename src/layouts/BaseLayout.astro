---
import Boilerplate from "./Boilerplate.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";

import "@styles/global.css";

import { DEFAULT_TITLE, URL_BASE } from "@scripts/constants";

const { pageTitle, sourceFile } = Astro.props;
const title = pageTitle
    ? `${pageTitle.trim()} | ${DEFAULT_TITLE}`
    : DEFAULT_TITLE;
---

<Boilerplate pageTitle={title} favicon=`/${URL_BASE}/favicon.svg`>
    <Header />
    <slot />
    <Footer sourceFile={sourceFile} />
</Boilerplate>
