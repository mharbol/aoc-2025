---
import Boilerplate from "./Boilerplate.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";

import "@styles/global.css";

import { DEFAULT_TITLE, URL_BASE } from "@scripts/constants";

interface Props {
    pageTitle?: string;
    sourceFile?: string;
}

const { pageTitle, sourceFile } = Astro.props;
const title = pageTitle
    ? `${pageTitle.trim()} | ${DEFAULT_TITLE}`
    : DEFAULT_TITLE;
---

<Boilerplate pageTitle={title} favicon=`/${URL_BASE}/favicon.svg`>
    <div class="container">
        <Header />
        <slot />
        <Footer {sourceFile} />
    </div>
</Boilerplate>

<style>
    .container {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }
</style>
