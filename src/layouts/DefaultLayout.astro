---
import BaseLayout from "./BaseLayout.astro";
const { pageTitle, sourceFile } = Astro.props;

const allDays = Object.values(
    import.meta.glob("../pages/solutions/day[0-9][0-9].md", { eager: true }),
);

function dayName(fileName: string): number {
    return parseInt(
        fileName.substring(fileName.lastIndexOf("/") + 1).match(/[0-9]{2}/)![0],
    );
}
---

<BaseLayout pageTitle={pageTitle} , sourceFile={sourceFile}>
    <div class="container">
        <div class="left-menu">
            {
                allDays.map((day: any) => (
                    <p>
                        <a href={day.url}>Day {dayName(day.file)}</a>
                    </p>
                ))
            }
        </div>
        <div class="slot">
            <slot />
        </div>
        <div class="spacer"></div>
    </div>

    <style>
        * {
            /* border: 1px solid red !important; */
        }
        .container {
            margin-top: 10px;
            display: flex;
        }
        .left-menu {
            width: 90px;
            margin-top: 5px;
            p {
                margin: 5px;
            }
        }
        .slot {
            display: flex;
            flex-direction: column;
            margin: 0;
            width: 100%;
        }
        .spacer {
            width: 80px;
        }
    </style>
</BaseLayout>
