---
import BaseLayout from "@layouts/BaseLayout.astro";

const { sourceFile } = Astro.props;

const allDays = Object.values(
    import.meta.glob("./day[0-9][0-9].md", { eager: true }),
);

function dayName(fileName: string): number {
    return parseInt(
        fileName.substring(fileName.lastIndexOf("/") + 1).match(/[0-9]{2}/)![0],
    );
}
---

<BaseLayout pageTitle="Solutions" sourceFile={sourceFile}>
    <h1>Solutions Home</h1>
    <ul>
        {
            allDays.map((day: any) => (
                <li>
                    <a href={day.url}>Day {dayName(day.file)}</a>
                </li>
            ))
        }
    </ul>
</BaseLayout>
