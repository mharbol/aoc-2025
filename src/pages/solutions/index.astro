---
import BaseLayout from "@layouts/BaseLayout.astro";
import SolutionSelection from "@components/SolutionSelection.astro";

const allDays = Object.values(
    import.meta.glob("./day[0-9][0-9].md", { eager: true }),
);

function dayName(fileName: string): number {
    return parseInt(
        fileName.substring(fileName.lastIndexOf("/") + 1).match(/[0-9]{2}/)![0],
    );
}
---

<BaseLayout pageTitle="Solutions">
    <h1>Solutions Home</h1>
    {
        allDays.map((day: any) => (
            <SolutionSelection dayUrl={day.url} dayNumber={dayName(day.file)} />
        ))
    }
</BaseLayout>
