---
interface Props {
    dayNumber: number;
    url: string;
    isSelectedDay: boolean;
    isReady: boolean;
}

const { dayNumber, url, isSelectedDay, isReady } = Astro.props;
---

<a
    title=`Day ${dayNumber} solution${isReady ? "" : " coming soon."}`
    href={isReady ? url : null}
    class:list={[{ selected: isSelectedDay, notReady: !isReady }]}
>Day {dayNumber}{!isReady ? "*" : null}</a
>

<style>
    a {
        width: 140px;
        height: 35px;
        border-radius: 9px;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: var(--left-nav-bg);
        color: var(--left-nav-text);
    }
    .selected {
        color: var(--left-nav-selected);
        background-color: var(--hover-color);
    }
    .notReady {
        background-color: var(--greyed-out);
        color: var(--greyed-out-text);
    }
    a:not(.notReady):hover {
        background-color: var(--left-hover);
    }
</style>
