---
const { dayNumber } = Astro.props;
const placeholder: string = "Paste input here...";
---

<div id="solution-area">
    <button name="btn-solve" id={dayNumber}>Solve</button>
    <div class="solution">
        <p>Part 1</p>
        <p id="part-1"></p>
    </div>
    <div class="solution">
        <p>Part 2</p>
        <p id="part-2"></p>
    </div>
</div>

<script src="@scripts/attach-solution.ts"></script>

<textarea
    placeholder={placeholder}
    id="puzzle-input"
    name="puzzle-input"
    spellcheck="false"
    required
    wrap="soft"></textarea>

<style>
    #puzzle-input {
        resize: none;
        min-height: 50vh;
    }

    #solution-area {
        display: flex;
        flex-wrap: wrap;
        justify-content: left;
        align-items: center;
        /* border: 2px solid red; */
        padding: 0px;
        margin: 0px;
        line-height: 0;
    }
</style>
